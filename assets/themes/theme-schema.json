{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NexusShell Theme Schema",
  "description": "Schema for validating NexusShell theme files",
  "type": "object",
  "required": ["name", "version", "author", "colors"],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "minLength": 1,
      "maxLength": 50,
      "description": "Theme name (alphanumeric, underscore, dash only)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (e.g., 1.0.0)"
    },
    "author": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Theme author name"
    },
    "description": {
      "type": "string",
      "maxLength": 500,
      "description": "Theme description"
    },
    "colors": {
      "type": "object",
      "required": ["primary", "secondary", "accent", "background", "foreground", "error", "warning", "success", "info"],
      "properties": {
        "primary": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Primary color (hex format)"
        },
        "secondary": {
          "type": "string", 
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Secondary color (hex format)"
        },
        "accent": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Accent color (hex format)"
        },
        "background": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Background color (hex format)"
        },
        "foreground": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Foreground/text color (hex format)"
        },
        "error": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Error color (hex format)"
        },
        "warning": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Warning color (hex format)"
        },
        "success": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Success color (hex format)"
        },
        "info": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Info color (hex format)"
        },
        "muted": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Muted color (hex format)"
        },
        "highlight": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Highlight color (hex format)"
        },
        "border": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Border color (hex format)"
        }
      },
      "additionalProperties": false
    },
    "styles": {
      "type": "object",
      "description": "Style definitions for UI elements",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "foreground": {
            "type": ["string", "null"],
            "description": "Foreground color name"
          },
          "background": {
            "type": ["string", "null"],
            "description": "Background color name"
          },
          "bold": {
            "type": "boolean",
            "default": false,
            "description": "Bold text"
          },
          "italic": {
            "type": "boolean",
            "default": false,
            "description": "Italic text"
          },
          "underlined": {
            "type": "boolean",
            "default": false,
            "description": "Underlined text"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
